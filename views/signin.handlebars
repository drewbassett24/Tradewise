{{!-- Login/Sign up page --}}
<div class="container-fluid justify-content-center">
  <div class="row col-sm-6 justify-content-center my-row">
    <div class="col-sm-10 border border-primary rounded">
      <h3 id="signin">Sign-in</h3>
      <form class="mt-4 mr-3 ml-3 mb-4 signin-form">
        <div class="form-group">
          <label>Username</label>
          <input type="username" class="form-control" id="signin-username" aria-describedby="emailHelp">
        </div>
        <div class="form-group">
          <label>Password</label>
          <input type="password" class="form-control" id="signin-password">
        </div>
        <button type="submit" class="btn btn-primary signin-btn mt-3 mb-4">Submit</button>
      </form>
    </div>
  </div>

  <div class="row my-row col-sm-6 justify-content-center">
    <div class="col-sm-10 border border-primary rounded">
      <h3 id="signup">Create an account</h3>
      <form class="mt-4 mr-3 ml-3 mb-4 signup-form">
        <div class="form-group">
          <label>Username</label>
          <input type="username" class="form-control" id="signup-username">
        </div>
        <div class="form-group">
          <label>Email address</label>
          <input type="email" class="form-control" id="signup-email" aria-describedby="emailHelp">
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <label id="password">Password</label>
          <button id="gen">Generate a secure password?</button>
          <input type="password" class="form-control" id="signup-password">
        </div>
        <div class="mb-3">
          <label>Sign-up as:</label>
          <select id="signup-role" class="custom-select" required>
            <option value="">Choose...</option>
            <option value="1">Customer</option>
            <option value="2">Electrician</option>
            <option value="3">Plumber</option>
          </select>
        </div>
        <button type="submit" class="btn btn-primary signup-btn mt-3 mb-4">Submit</button>
      </form>
    </div>
  </div>
</div>

<script src="/js/signin.js"></script>
