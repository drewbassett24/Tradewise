{{!-- Needs to do each for the comments --}}
<h3>Replies to this job...</h3>
<p class="editable" contenteditable="true" id="comment" data-placeholder="Leave a reply..."></p>
<button class="btn" id="submit-comment">Submit reply</button>

<div class="comments">
  {{#each this}}
    <div class="card">
        <section class="comment card-body">
            <div class="text">
                {{this.content}}
            </div>
            <div class="meta">
                -{{this.user.username}}, 
                {{format_date this.date_created}}
            </div>
        </section>
    </div>
  {{/each}}
</div>

