<section>
        <div class="row flex m-3 p-3">
            <div class="align-items-start col-sm-12 col-md-3 m-3 p-3 ">
                <img class= "justify-content-center" src="https://placeimg.com/128/128/people">
            </div>
            <div class="align-items-center d-flex col-sm-12 col-md-8">
                <h2>My Profile </h2>
            </div>
        </div>

        <div class="row mx-3 px-3">
                {{#if checkCustomer }}
                <div class="border col-sm-12 col-md-3 m-3 p-3">
                <p>My Jobs</p>
                    {{#each myJobs as |myjob| }} 
                    <div class="col-md-6 job-post">
                        <h2 class="padding job-header"><a href="/jobs/{{myjob.id}}">{{myjob.title}}</a></h2>
                        <p class="padding job-description">{{short myjob.description}}</p>  
                        <p class="padding job-info">{{format_date myjob.date_created}}</p>
                    </div>
                    {{/each}}
                </div>
                {{else}}
                <div class="border col-sm-12 col-md-3 m-3 p-3">
                <h3 class="mb-5">My Jobs</h3>
                    {{#each myJobs as |myjob| }} 
                    <div class="col-12 mb-5 job-post">
                        <h2 class="padding job-header"><a href="/jobs/{{myjob.id}}">{{myjob.title}}</a></h2>
                        <p class="padding job-description">{{short myjob.description}}</p>  
                        <p class="padding job-info">{{format_date myjob.date_created}}</p>
                    </div>
                    {{/each}}
                </div>
                <div class="border col-md-8 m-3 p-3">

                  <h3 class="mb-5">Current Jobs</h3>
                    {{#each otherJobs as |ojob| }} 
                    <div class="col-md-6 mb-5 job-post">
                        <h2 class="padding job-header"><a href="/jobs/{{ojob.id}}">{{ojob.title}}</a></h2>
                        <p class="padding job-description">{{short ojob.description}}</p>  
                        <p class="padding job-info">{{format_date ojob.date_created}} | {{ojob.user.username}}</p>
                    </div>
                    {{/each}}
                </div>
               {{/if}}
        </div>
    </section>